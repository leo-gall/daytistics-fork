{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Debug NestJS in Docker",
            "address": "localhost",
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "restart": true,
            "localRoot": "${workspaceFolder}/backend",
            "remoteRoot": "/app",
            "outFiles": [
                "${workspaceFolder}/backend/dist/**/*.js"
            ],
        }
    ]
}